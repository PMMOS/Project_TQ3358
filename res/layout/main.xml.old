<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null" />

            <CheckBox
                android:id="@+id/cb_Lock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_Lock1" />

            <CheckBox
                android:id="@+id/cb_Lock2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_Lock2" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx_Lock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tx_Lock1"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tx_Lock2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tx_Lock2"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tx_Lock3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tx_Lock3"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tx_Lock4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tx_Lock4"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tx_Lock5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tx_Lock5"
                android:textAppearance="?android:attr/textAppearanceLarge" />
           
            <TextView
                android:id="@+id/postview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/receiveview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnQuit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
