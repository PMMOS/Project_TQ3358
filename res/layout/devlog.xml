<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/devlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tx_devlog"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/devip"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/tx_devip"
                android:textSize="20sp"/>
            
            <TextView 
                android:id="@+id/devipval"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@null"
                android:textSize="20sp"/>    
                
          </LinearLayout>
          
          <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3" />
          
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="0dip"
              android:layout_weight="10"
              android:orientation="horizontal">
              
			  <TextView 
			      android:id="@+id/devport"
			      android:layout_width="0dip"
			      android:layout_height="match_parent"
			      android:layout_weight="1"
			      android:layout_gravity="center_horizontal|center_vertical"
			      android:text="@string/tx_devport"
			      android:textSize="20sp"/>
			  
			  <TextView 
			      android:id="@+id/devportval"
			      android:layout_width="0dip"
			      android:layout_height="match_parent"
			      android:layout_weight="3"
			      android:layout_gravity="center_vertical|center_horizontal"
			      android:text="@null"
			      android:textSize="20sp"/>

          </LinearLayout>
          
          <View
              android:layout_width="match_parent"
              android:layout_height="0dip"
              android:layout_weight="22.56" />
          
          <TextView 
              android:id="@+id/devlogres"
              android:layout_width="match_parent"
              android:layout_height="0dip"
              android:layout_weight="8"
              android:layout_gravity="center_vertical|center_horizontal"
              android:text="@null"
              android:textSize="20sp"/>
          
          <View 
              android:layout_width="match_parent"
              android:layout_height="0dip"
              android:layout_weight="38.54"/>
            

    </LinearLayout>

</RelativeLayout>