<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null" />

        <CheckBox
            android:id="@+id/cb_Lock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/cb_Lock1" />

        <CheckBox
            android:id="@+id/cb_Lock2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/cb_Lock2" />
        
        <CheckBox 
            android:id="@+id/cb_Lock3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/cb_Lock3" />

        <Button
            android:id="@+id/btnQuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/fragment_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.28" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/tx_Lock1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/tx_Lock1"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    
                    <TextView 
                        android:id="@+id/tx_Power1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight= "0.5"
                        android:text="@string/tx_Power1"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    
                </LinearLayout>
                

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/tx_Lock2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/tx_Lock2"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    
                    <TextView 
                        android:id="@+id/tx_Power2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight= "0.5"
                        android:text="@string/tx_Power2"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    
                </LinearLayout>

               <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/tx_Lock3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/tx_Lock3"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    
                    <TextView 
                        android:id="@+id/tx_Power3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight= "0.5"
                        android:text="@string/tx_Power3"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    
                </LinearLayout>

               <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/tx_Lock4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/tx_Lock4"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    
                    <TextView 
                        android:id="@+id/tx_Power4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight= "0.5"
                        android:text="@string/tx_Power4"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    
                </LinearLayout>

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/tx_Lock5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/tx_Lock5"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    
                    <TextView 
                        android:id="@+id/tx_Power5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight= "0.5"
                        android:text="@string/tx_Power5"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="13dp" />

                <TextView
                    android:id="@+id/postview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="11dp" />

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="16.96" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/receiveview"
                            android:layout_width="match_parent"
                            android:layout_height="275dp"
                            android:text="@null"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <requestFocus />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_video"
            android:layout_width="478dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02" >

        </FrameLayout>

    </LinearLayout>

</LinearLayout>