<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <com.lib.funsdk.support.widget.FunVideoView
        android:id="@+id/funVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:clickable="true"
        android:keepScreenOn="true"
        android:longClickable="true" />

    <LinearLayout
        android:id="@+id/layout_control1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#6c000000"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_playstop"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_reload"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/reload" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_capture"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/capture" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_record"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/record" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_preview"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/preview" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_warn"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/warn" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="7.3" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_control2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#6c000000"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />

                <ImageButton
                    android:id="@+id/ib_rtn"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="5dip"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rtn_blue" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="13.9" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_VideoState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" >

        <TextView
            android:id="@+id/tv_VideoState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#40000000"
            android:textColor="#ffffffff"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_suspension"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_Recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img_Recording"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/recording" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_Recording"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/tx_recording" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_Warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img_Warning"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/warn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_Warning"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/tx_warning" />
        </RelativeLayout>

        <View
            android:id="@+id/patchview"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000" />

        <TextView
            android:id="@+id/tv_mainsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/patchview"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_tvmain"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_subsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/patchview"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_subsource"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_selectsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/patchview"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_tvmain"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_channel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan2"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan3"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan4"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan5"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan6"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan7"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_channel8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan8"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_selectchannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/patchview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:padding="5dip"
            android:text="@string/tx_chan1"
            android:textColor="@color/blue" />
    </RelativeLayout>

</RelativeLayout>